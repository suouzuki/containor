{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src"]
}
